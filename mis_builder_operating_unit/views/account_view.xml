<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Journal Items Inherited -->
        <record id="view_move_line_form_inherited" model="ir.ui.view">
            <field name="name">account.move.line.form.inherited</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="operating_unit_id" domain="[('company_id', '=', company_id)]"/>
                </field>
            </field>
        </record>

        <!-- Accounts Inherited-->
        <record id="view_account_form_inherited" model="ir.ui.view">
            <field name="name">account.account.form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="operating_unit_id" required="True" domain="[('company_id', '=', company_id)]"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
